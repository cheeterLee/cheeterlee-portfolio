---
import type { Experience } from "@/data/projects"
import { date } from "astro/zod"
import { Image } from "astro:assets"

type Props = Experience

const { title, link, techs, company, icon, time, location } = Astro.props

export const formatTechs = (values: string[]) =>
	values.toString().replaceAll(",", " â€¢ ")
---

<>
	<a
		href={link}
		target="_blank"
		class="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400 md:flex-row md:items-center"
	>
		<div
			class="flex w-full flex-col justify-around md:flex-row md:justify-between"
		>
			<div class="flex flex-col md:flex-row md:items-center md:gap-12">
				<div class="mb-2 flex items-center gap-2 md:mb-0">
					<Image
						src={icon}
						width="50"
						height="50"
						alt="company icon"
						class="rounded-full"
					/>
					<p class="text-neutral-100">{company}</p>
				</div>
				<div class="mb-1 flex flex-col gap-1 md:mb-0">
					<p class="text-neutral-100">{title}</p>
					<p>{formatTechs(techs)}</p>
				</div>
			</div>
			<div
				class="flex flex-col gap-1 md:flex-row md:items-center md:gap-2"
			>
				<p>{`${time} `}</p>
				<p>{location}</p>
			</div>
		</div>
	</a>
</>
